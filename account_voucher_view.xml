<tryton>
    <data>

<!-- Account Voucher -->
        <menuitem name="Voucher" parent="account.menu_account"
            id="menu_vouchers" sequence="21"/>

        <record model="ir.action.wizard" id="wizard_select_invoices">
            <field name="name">"Select Invoices to Pay"</field>
            <field name="wiz_name">account.voucher.select_invoices</field>
            <field name="model">account.voucher</field>
        </record>


        <record model="ir.ui.view" id="account_voucher_form">
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Voucher" col="6">
                    <label name="party"/>
                    <field name="party"/>
                    <label name="number"/>
                    <field name="number"/>
                    <label name="date"/>
                    <field name="date"/>
                    <label name="voucher_type"/>
                    <field name="voucher_type"/>
                    <label name="journal_id"/>
                    <field name="journal_id"/>
                    <separator name="pay_mode_1" string="Pay Modes" colspan="6"/>
                    <label name="pay_mode_1"/>
                    <field name="pay_mode_1"/>
                    <label name="pay_amount_1"/>
                    <field name="pay_amount_1"/>
                    <button name="%(wizard_select_invoices)d" colspan="2" string="_Select Invoices to pay"
                                        type="action"
                                        icon="tryton-go-next"/>
                    <label name="pay_mode_2"/>
                    <field name="pay_mode_2"/>
                    <label name="pay_amount_2"/>
                    <field name="pay_amount_2"/>
                    <label name="currency_id"/>
                    <field name="currency_id"/>
                    <label name="amount_pay"/>
                    <field name="amount_pay"/>
                    <label name="amount"/>
                    <field name="amount"/>


<!--                    <label name="period_id"/>-->
<!--                    <field name="period_id"/>-->
                    <notebook colspan="6">
                        <page string="Voucher Lines" id="lines" col="6">
                            <field name="line_ids" colspan="6">
                                <tree string="Lines">
                                    <field name="name"/>
                                    <field name="account_id"/>
                                    <field name="line_type"/>
                                    <field name="amount_original" select="1"/>
                                    <field name="amount_unreconciled" select="2"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>

                    </notebook>
                    <label name="state"/>
                    <field name="state"/>
                    <group colspan="4" id="group_voucher_1">
                        <button name="posted" string="_pay" icon="tryton-go-next"
                            states="{'invisible': In(Eval('state'), ['posted'])}"/>
                        <button name="cancel" string="_cancel" icon="tryton-go-next"
                            states="{'invisible': In(Eval('state'), ['posted'])}"/>
                    </group>


                </form>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="account_voucher_tree">
            <field name="model">account.voucher</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string='Voucher'>
                    <field name="number"/>
                    <field name="party"/>
                    <field name="date"/>
                    <field name="amount"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.action.act_window" id="act_voucher_form">
            <field name="name">All Vouchers</field>
            <field name="res_model">account.voucher</field>
        </record>
        <menuitem parent="menu_vouchers" action="act_voucher_form"
            id="menu_voucher_form" sequence="5"/>

        <record model="ir.action.act_window" id="act_voucher_receipt_form">
            <field name="name">Receipts</field>
            <field name="res_model">account.voucher</field>
            <field name="domain">[('voucher_type', '=', 'receipt')]</field>
            <field name="context">{'voucher_type': 'receipt'}</field>
        </record>
        <menuitem parent="menu_vouchers" action="act_voucher_receipt_form"
            id="menu_voucher_receipt_form" sequence="10"/>

        <record model="ir.action.act_window" id="act_voucher_payment_form">
            <field name="name">Payments</field>
            <field name="res_model">account.voucher</field>
            <field name="domain">[('voucher_type', '=', 'payment')]</field>
            <field name="context">{'voucher_type': 'payment'}</field>
        </record>
        <menuitem parent="menu_vouchers" action="act_voucher_payment_form"
            id="menu_voucher_payment_form" sequence="15"/>


    </data>
</tryton>
