<?xml version="1.0"?>
<tryton>
    <data depends="account_statement">

        <record model="ir.ui.view" id="statement_account_voucher_paymode_tree">
            <field name="model">account.voucher.paymode</field>
            <field name="inherit" ref="account_voucher_paymode_tree"/>
            <field name="name">statement_paymode_tree</field>
        </record>
        <record model="ir.ui.view" id="statement_account_voucher_paymode_form">
            <field name="model">account.voucher.paymode</field>
            <field name="inherit" ref="account_voucher_paymode_form"/>
            <field name="name">statement_paymode_form</field>
        </record>

        <record model="ir.rule.group" id="rule_group_voucher_paymode_companies">
            <field name="name">User in companies</field>
            <field name="model"
                search="[('model', '=', 'account.voucher.paymode')]"/>
            <field name="global_p" eval="True"/>
        </record>
        <record model="ir.rule" id="rule_voucher_paymode_companies">
            <field name="domain"
                eval="[('company', 'in', Eval('companies', []))]"
                pyson="1"/>
            <field name="rule_group" ref="rule_group_voucher_paymode_companies"/>
        </record>

    </data>
</tryton>
